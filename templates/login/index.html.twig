{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="login">
    <h2>Connecte-toi à ton espace personnel</h2>
    <div class="container">
        <form class="login-form" action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="username">Nom d'utilisateur:</label>
                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}"/>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe:</label>
                <input type="password" id="password" class="form-control" name="_password"/>
            </div>
            <a href="#">Mot de passe oublié ?</a>
            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}
            <div class="submit-container">
                <button type="submit" class="btn btn-login">Me connecter</button>
            </div>
            {% if error %}
            <div class="error">
                {# {{ error.messageKey|trans(error.messageData, 'security') }} #}
                <p>Ton nom d'utilisateur et/ou ton mot de passe est incorrect</p>
            </div>
            {% endif %}
        </form>
    </div>
    <h2>Pas encore de compte ?</h2>
    <a href="/register" class="btn btn-signup">Inscris-toi en 1 minute</a>
</section>
{% endblock %}
