{% extends 'base.html.twig' %}

{% block title %}Toutes les séries{% endblock %}

{% block body %}
<section class="search">
    <div class="container">
        <form>
            <label for="search">Rechercher:</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search">
                <div class="input-group-append">
                  <button class="btn btn-success" type="submit">Go</button>
                </div>
            </div>
            <div class="row g-3">
                <div class="col-6">
                    <label for="genre">Genre:</label>
                    <select class="form-select">
                        <option>Tous</option>
                    </select>
                </div>
                <div class="col-6">
                    <label for="rate">Popularité:</label>
                    <select class="form-select">
                        <option>Toutes</option>
                    </select>
                </div>
            </div>
            <div class="row g-3">
                <div class="col-6">
                    <label for="year">Année:</label>
                    <select class="form-select">
                        <option>Toutes</option>
                    </select>
                </div>
                <div class="col-6">
                    <label for="orderBy">Trier par:</label>
                    <select class="form-select">
                        <option>Dernier ajout</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
</section>
<section class="results">
    <h2>{{  series.getTotalItemCount }} séries</h2>
    <div class="cards">
        {% for serie in series %}
        <div class="card">
            <a href="{{ path("series_show", { slug: serie.slug }) }}">
                <img class="card-img-top" src="https://image.tmdb.org/t/p/original{{ serie.poster }}" alt="Affiche de {{ serie.title }}">
            </a>
            <div class="card-body">
                <h6>{{ serie.title }}</h6>
                <p class="card-text">{{ serie.startYear }}
                {% if serie.endYear %}
                    - {{ serie.endYear }}
                {% else %}
                    - aujourd'hui
                {% endif %}</p></p>
            </div>
        </div>
        {% endfor %} 
    </div>
    <div class="pagination">
        {% do series.setPageRange(3) %}
        {{ knp_pagination_render(series, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
    </div>
</section>
{% endblock %}
